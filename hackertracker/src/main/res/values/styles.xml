<resources>

    <style name="Theme.WtfPreference" parent="@style/PreferenceThemeOverlay">
        <item name="preferenceScreenStyle">@style/Preference.PreferenceScreen</item>
        <item name="preferenceFragmentStyle">@style/PreferenceFragment</item>
        <item name="preferenceCategoryStyle">@style/Preference.Category</item>
        <item name="preferenceStyle">@style/Preference</item>
        <item name="preferenceInformationStyle">@style/Preference.Information</item>
        <item name="checkBoxPreferenceStyle">@style/Preference.CheckBoxPreference</item>
        <item name="switchPreferenceCompatStyle">@style/Preference.SwitchPreferenceCompat</item>
        <item name="dialogPreferenceStyle">@style/Preference.DialogPreference</item>
        <item name="editTextPreferenceStyle">@style/Preference.DialogPreference.EditTextPreference
        </item>
        <item name="preferenceFragmentListStyle">@style/PreferenceFragmentList</item>
    </style>

    <style name="ThemeBase" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="logo_main">@drawable/skull_25</item>
        <item name="logo_secondary">@drawable/skull</item>


        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="preferenceTheme">@style/Theme.WtfPreference</item>

        <item name="android:checkboxStyle">@style/AppCheckBoxStyle</item>

        <item name="android:buttonStyle">@style/buttonStyle</item>

        <!-- Preferences-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white_alpha</item>

        <!-- AppCompat Dialog Attributes -->
        <item name="dialogTheme">@style/AppCompatDialog</item>
        <item name="alertDialogTheme">@style/AppCompatAlert</item>

        <item name="checkboxStyle">@style/AppCheckBoxStyle</item>
    </style>

    <style name="AppTheme" parent="ThemeBase">


    </style>

    <style name="AppTheme.Toorcon" parent="AppTheme">
        <item name="logo_main">@drawable/toorcon_logo</item>
        <item name="logo_secondary">@drawable/toorcon_logo</item>
    </style>

    <style name="AppTheme.Shmoocon" parent="AppTheme">
        <item name="logo_main">@drawable/shmoocon_logo</item>
        <item name="logo_secondary">@drawable/shmoocon_logo</item>
    </style>

    <style name="AppTheme.Hackwest" parent="AppTheme">
        <item name="logo_main">@drawable/hackwest_logo</item>
        <item name="logo_secondary">@drawable/hackwest_logo</item>
    </style>

    <style name="AppCheckBoxStyle" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme">
        <item name="colorPrimary">@color/light_gray</item>
        <item name="colorPrimaryDark">@color/light_gray</item>
        <item name="colorAccent">@color/light_gray</item>
        <item name="colorControlNormal">@color/light_gray</item>
        <item name="colorControlHighlight">@color/light_gray</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
    </style>

    <style name="StyleTheme.Goon" parent="AppTheme.Dark">
        <item name="colorPrimary">@color/colorPrimary_goon</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_goon</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary_Goon</item>
        <item name="android:textColorSecondary">@color/textColorSecondary_Goon</item>
        <item name="colorAccent">@color/colorAccent_Goon</item>
    </style>


    <!-- Used for Filter View -->
    <style name="MyAlertDialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowTitleStyle">@style/windowTitleStyle</item>
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Used for the background -->
        <item name="android:background">@color/background</item>
    </style>

    <style name="windowTitleStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <!-- Generic Dialog Theme -->
    <style name="AppCompatDialog" parent="Theme.AppCompat.Dialog">
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Used for the background -->
        <item name="android:background">@color/background</item>
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <!-- Alert Dialog Theme -->
    <style name="AppCompatAlert" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimary">?colorPrimary</item>
        <!-- Used for the background -->
        <item name="android:background">?android:colorBackground</item>
        <!-- Used for the buttons -->
        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="colorControlHighlight">?attr/colorPrimary</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>



    <!-- Individual element styles. -->

    <style name="Label" parent="TextAppearance.AppCompat.Body2">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="Paragraph" parent="TextAppearance.AppCompat.Body1">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:autoLink">all</item>
    </style>

    <style name="buttonStyle" parent="@android:style/Widget.Holo.Button">
        <item name="android:background">@null</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:minWidth">120dp</item>
    </style>


</resources>
