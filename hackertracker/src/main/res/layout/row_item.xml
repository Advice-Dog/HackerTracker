<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal"
    tools:background="@color/background">


    <View
        android:id="@+id/category"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rootLayout"
        android:layout_alignTop="@+id/rootLayout"
        android:background="#ee837b" />

    <LinearLayout
        android:id="@+id/rootLayout"
        style="@style/row"
        android:layout_toEndOf="@+id/category"
        android:layout_toRightOf="@+id/category"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/card_item_text"
            tools:text="Young Hacker Talk" />

        <TextView
            android:id="@+id/location"
            style="@style/card_item_text"
            tools:text="Track 1" />

        <LinearLayout
            android:id="@+id/icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/demo"
                style="@style/card_item_text.category"
                android:text="@string/demo"
                android:textColor="@color/white_alpha" />

            <TextView
                android:id="@+id/exploit"
                style="@style/card_item_text.category"
                android:text="@string/exploit"
                android:textColor="@color/white_alpha" />

            <TextView
                android:id="@+id/tool"
                style="@style/card_item_text.category"
                android:text="@string/tool"
                android:textColor="@color/white_alpha" />

        </LinearLayout>

        <TextView
            android:id="@+id/time"
            style="@style/card_item_text.small"
            tools:text="Friday, 11:00 AM - 3:00 PM"
            />

        <TextView
            android:id="@+id/category_text"
            style="@style/card_item_text.small"
            tools:text="Event"
            />

    </LinearLayout>

</RelativeLayout>