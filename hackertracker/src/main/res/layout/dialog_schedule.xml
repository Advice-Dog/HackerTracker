<?xml version="1.0" encoding="utf-8"?>

 <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/button_black"
    >
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:id="@+id/dialogTitle"
        style="@style/dialog_header">
        <TextView
            style="@style/dialog_title"
            android:text="oh snap!"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/skull"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/text"
        style="@style/dialog_text"
        android:text="looks like you don't have anything in your schedule yet!\n\ncheck out the speaker list, contests, parties, and events to make the most of your DEF CON 22 experience :)"
        android:gravity="center"
        android:padding="10dp"/>

    <CheckBox
        android:id="@+id/dont_show_suggestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="don't show this again"
        android:textColor="@color/white"
        android:checked="false"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/dismiss"
            style="@style/dialog_button"
            android:padding="10dp"
            android:text="got it!"
            android:textSize="14dp"
            android:layout_margin="0dp"
            />
    </LinearLayout>
</LinearLayout>