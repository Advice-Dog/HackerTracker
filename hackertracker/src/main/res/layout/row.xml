<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    style="@style/row"
    android:orientation="horizontal"
    tools:background="@color/background">

    <View
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            tools:text="DARPA Cyber Grand Challenge" />

        <TextView
            android:id="@+id/name"
            style="@style/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:visibility="gone" />

        <TextView
            android:id="@+id/location"
            style="@style/where"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autoLink="none"
            tools:text="Track 1" />

        <TextView
            android:id="@+id/speaker"
            style="@style/where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textIsSelectable="true"
            tools:text="Speaker Name"
            android:visibility="gone" />

        <TextView
            android:id="@+id/time"
            style="@style/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/demo"
                style="@style/icon_text"
                android:text="@string/demo" />

            <TextView
                android:id="@+id/exploit"
                style="@style/icon_text"
                android:text="@string/exploit" />

            <TextView
                android:id="@+id/tool"
                style="@style/icon_text"
                android:text="@string/tool" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/isNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginLeft="15dp"
        android:background="@drawable/button_green_rounded"
        android:gravity="end"
        android:padding="4dp"
        android:text="@string/is_new"
        android:textColor="@color/black" />
</LinearLayout>