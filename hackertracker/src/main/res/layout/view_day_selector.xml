<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="52dp"
    android:paddingLeft="24dp">

    <View
        android:id="@+id/bubble"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/day_selector_bubble"
        app:layout_constraintBottom_toBottomOf="@+id/day_1"
        app:layout_constraintTop_toTopOf="@+id/day_1"
        tools:layout_constraintEnd_toEndOf="@+id/day_1"
        tools:layout_constraintStart_toStartOf="@+id/day_1" />


    <TextView
        android:id="@+id/day_1"
        style="@style/day_selector_day"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="May 31" />

    <TextView
        android:id="@+id/day_2"
        style="@style/day_selector_day"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/day_1"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="June 1" />


    <TextView
        android:id="@+id/day_3"
        style="@style/day_selector_day"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/day_2"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="June 2" />

    <TextView
        android:id="@+id/day_4"
        style="@style/day_selector_day"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/day_3"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="June 3" />


</androidx.constraintlayout.widget.ConstraintLayout>