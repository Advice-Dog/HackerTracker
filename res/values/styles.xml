<resources>
    <style name="activityHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="row">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">@drawable/row_background</item>
    </style>
    <style name="title">
        <item name="android:textColor">@drawable/row_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="location">
        <item name="android:textColor">@drawable/row_text_color</item>
    </style>
    <style name="dayText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">left</item>
    </style>
    <style name="dayCollapse">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">right</item>
    </style>
    <style name="day1TextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">#8cbb18</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <style name="day2TextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">#80ab16</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <style name="day3TextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">#6b900f</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <style name="day4TextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">#5a7713</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <style name="dropDownListView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="buttonStyle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_states</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    <style name="icon">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="tweetUser">
        <item name="android:textColor">#92bd17</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="tweetText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="aboutText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="detailsLayout">
        <item name="android:background">@color/white</item>
    </style>
    <style name="details_body">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15dp</item>
    </style>
    <style name="details_title">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/lime</item>
    </style>
    <style name="details_speaker">
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="details_time">
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="details_location">
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="details_forum">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
    </style>
</resources>
